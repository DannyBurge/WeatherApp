<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadius="@dimen/innerRadiusInner"
            android:shape="ring"
            android:thicknessRatio="@dimen/thickRation"
            android:useLevel="true">

            <gradient
                android:centerColor="@color/feelsLikeHotBar"
                android:endColor="@color/black"
                android:startColor="@color/clear"
                android:type="sweep" />
        </shape>
    </item>
    <item>
        <shape
            android:innerRadius="@dimen/innerRadiusInner"
            android:shape="ring"
            android:thicknessRatio="@dimen/thickRation"
            android:useLevel="false">
            <solid android:color="@color/backgroundTempBar" />
        </shape>
    </item>
</layer-list>
