<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="myAnimations" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_down_up_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_down_up_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_down_up_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_down_up_close_enter</item>
    </style>

    <style name="myCardStyle">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/main</item>
    </style>

    <style name="myCircularBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:max">6000</item>
        <item name="android:min">0</item>
        <item name="android:progress">3000</item>
        <item name="android:background">@drawable/progress_bar_bg</item>
        <item name="android:rotation">90</item>
    </style>

    <style name="ProgressBarBGColor">
        <item name="android:color">#FBFBFB</item>
    </style>

    <style name="dayDurationBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">#FBFBFB</item>
    </style>

    <style name="myCircularBar.Inner">
        <item name="android:background">@drawable/progress_bar_bg_inner</item>
    </style>

    <style name="iconLeft">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/marginMain</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="iconRight">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">@dimen/marginMain</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
</resources>